
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>@ViewBag.Title</title>
        
        <!-- Style Files -->
        <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
        <link rel="stylesheet" href="~/Content/all.css" />
        <link rel="stylesheet" href="~/Content/Site.css" />
        <link rel="stylesheet" href="~/Content/owl.carousel.min.css" />

        <link rel="icon" href="~/images/LOGO2.jpeg" />

    </head>
    <body>

        <!-- Start Nvabr -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand text-uppercase  " href="/home/index">
                clothes<span>store</span>
                <p class="text-muted text-uppercase m-0" style="font-size: 10px">haozhe trade limited company</p>
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link text-uppercase" href="/home/index">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("wedding", "Collection", "Home", new { collection = "wedding" }, new { @class = "text-uppercase nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("jeans", "Collection", "Home", new { collection = "jeans" }, new { @class = "text-uppercase nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("underwear", "Collection", "Home", new { collection = "underwear" }, new { @class = "text-uppercase nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("jilbab", "Collection", "Home", new { collection = "jilbab" }, new { @class = "text-uppercase nav-link" })
                    </li>

                    <li class="nav-item">
                        @if (User.Identity.IsAuthenticated)
                        {
                            using (Html.BeginForm("Logoff", "Account", FormMethod.Post, new { id = "logoff" }))
                            {
                                @Html.AntiForgeryToken()
                                <ul class="navbar-nav ">

                                    <li class="nav-item">
                                        <a href="javascript:document.getElementById('logoff').submit()" class="nav-link">Logout</a>
                                    </li>
                                </ul>
                            }
                        }

                        else
                        {
                            @Html.ActionLink("Login / Register", "login", "Account", null, new { @class = "nav-link" })
                        }
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item position-relative" style="cursor: pointer">
                            <i class="fas fa-search ml-3 mr-4 searchIcon" style="font-size: 20px;margin-top: 12px"></i>

                            <!-- Start Search Form -->
                            <form method="post" class="search_form hideOrShow">
                                <div class="form-group">
                                    <input type="text" class="form-control" />
                                </div>
                                <button type="submit" class="btn"><i class="fas fa-search"></i></button>
                            </form>
                        </li>
                        <li class="nav-item position-relative">
                            @Html.Action("getAllProductsInCart", "Home")
                        </li>
                    }
                </ul>
            </div>
        </nav>


        <!-- All Pages will displayed here -->
        @RenderBody()


        <!-- Start Footer -->
        <section class="footer mt-5 p-5">
            <div class="row">
                <div class="col-md-3">
                    <p class="m-0 font-weight-bold text-uppercase">clothes<span>store</span></p>
                    <p class="text-muted text-uppercase font-weight-bold m-0" style="font-size: 10px">haozhe trade limited company</p>
                    <p class="text-muted mt-3">All our products are created with care and made for consumers who is out for good value. Our items focus on practical design, good looks, fashion and suitability from inception. We commit to take care of our customers so that trust and confidence will be built up over time.</p>
                    <a href="https://www.facebook.com/Wemen-flower-103301108055678" class="text-dark" target="_blank"><i class="fab fa-facebook-square"></i></a>
                </div>
                <div class="col-md-3">
                    <h5>categories</h5>
                    <ul class="list-group text-muted">
                        <li>wedding</li>
                        <li>jeans</li>
                        <li>underwear</li>
                        <li>jilbab</li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>contact us</h5>
                    <i class="fas fa-phone" style="color: #6E7F88"></i><span style="color: #6E7F88" class="ml-3 font-weight-bold"> Call : +972 13229996048</span> <br /><br />
                    <i class="fas fa-envelope" style="color: #6E7F88"></i> <span style="color: #6E7F88" class="ml-3 font-weight-bold">Email : flwrflwrflwr58@gmail.com</span> <br /> <br />
                    <span style="color: #6E7F88" class="font-weight-bold">Company Registration : 2875174</span>
                </div>
                <div class="col-md-3">
                    <h5>about us</h5>
                    <i class="fas fa-map-marker-alt" style="color: #6E7F88"></i><span style="color: #6E7F88" class="ml-3 font-weight-bold">Room 802 , Jinying Building Huanshizhong Road , No.316 , Guangzhou , China</span>
                </div>
            </div>
        </section>
        <section class="copyRight border" style="box-shadow: 10px 0 20px 1px rgba(0,0,0, .1)">
            <p class="p-3 mt-2 text-capitalize text-muted ml-5">&copy;  @DateTime.Now.Year All right reserved.</p>
        </section>

        <!-- Script Files -->
        <script src="~/Scripts/jquery-3.5.1.min.js"></script>
        <script src="~/Scripts/popper.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/owl.carousel.min.js"></script>
        <script src="~/Scripts/app.js"></script>

    </body>
</html>
